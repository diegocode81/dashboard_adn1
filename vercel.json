{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 300
    }
  },
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/upload", "methods": ["POST"], "dest": "/api/upload.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
